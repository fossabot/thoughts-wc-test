{
    "root": "./",
    "suites": [
        "./test/index.html"
    ],
    "verbose": true,
    "plugins": {
        "local": {
            "disabled": false,
            "skipSeleniumInstall": true
        },
        "istanbul": {
            "dir": "./coverage",
            "reporters": [
                "text-summary",
                "lcov"
            ],
            "include": [
                "./test/add.js",
                "./test/thoughts-wc-test_test.html"
            ],
            "exclude": [
                "node_modules"
            ],
            "thresholds": {
                "global": {
                    "statements": 80,
                    "branches": 80,
                    "functions": 90,
                    "lines": 80
                }
            }
        }
    }
}